{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
  // Emit JS and declarations so consumers can execute the library
  // (previously emitDeclarationOnly prevented JS output and broke runtime)
  // "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}